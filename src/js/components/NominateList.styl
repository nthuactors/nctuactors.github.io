.NominateContainer
    display: flex
    flex-direction: column
    align-items: center
    .filterBox
        display: flex
        justify-content: space-around
        align-items: center
    .peopleBox
        width: 100%
        ul
            width: 100%
            height: auto
            display: flex
            justify-content: flex-start
            align-items: flex-start
            flex-wrap: wrap
            li
                display: flex
                flex-direction: column
                align-items: center
                width: 25%
                margin: 10px 0
                .imgWrapper
                    width: 100px
                    height: 100px
                    border-radius: 50%
                    overflow: hidden
                    img
                        width: 100%
                        height: auto
