.NominateContainer
    display: flex
    flex-direction: column
    align-items: center
    .filterBox
        margin: 15px 0
        display: flex
        justify-content: space-around
        align-items: center
        div
            cursor: pointer
            font-size: 1.25em
            border: 2px solid #50514F
            padding: 5px 20px
            margin: 0 5px
            // border-radius: 5px
            transition: all 0.25s ease
            &:hover
                transition: all 0.35s ease
                background: #50514F
                color: white
    .peopleBox
        max-width: 1024px
        width: 100%
        ul
            width: 100%
            height: auto
            display: flex
            justify-content: flex-start
            align-items: flex-start
            flex-wrap: wrap
            li
                width: 25%
                height: 250px
                margin: 20px 0
                display: flex
                flex-direction: column
                align-items: center
                .listContain
                    cursor: pointer
                    width: 80%
                    height: 100%
                    box-shadow: 1px 1px 5px #50514F
                    display: flex
                    flex-direction: column
                    align-items: center
                    position: relative
                    background: #4568DC; /* fallback for old browsers */
                    background: -webkit-linear-gradient(220deg, #4568DC , #B06AB3); /* Chrome 10-25, Safari 5.1-6 */
                    background: linear-gradient(220deg, #4568DC , #B06AB3); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
                    .textWrapper
                        position: absolute
                        top: 0
                        left: 0
                        width: 100%
                        height: 100%
                        display: flex
                        flex-direction: column-reverse
                        align-items: center
                        background: #4568DC; /* fallback for old browsers */
                        background: -webkit-linear-gradient(220deg, rgba(#4568DC, 0.35) , rgba(#B06AB3, 0.35)); /* Chrome 10-25, Safari 5.1-6 */
                        background: linear-gradient(220deg, rgba(#4568DC, 0.35) , rgba(#B06AB3, 0.35));
                        z-index: 2
                        div
                            text-align: center
                            color: white
                            font-size: 1.25em
                    .imgWrapper
                        z-index: 1
                        position: absolute
                        top 0
                        left: 0
                        width: 100%
                        height: 100%
                        display: flex
                        justify-content: center
                        align-items: center
                        overflow: hidden
                        background-position: center
                        background-repeat: no-repeat
                        background-size: cover
                @media screen and (max-width: 1024px)
                    width: 33.3%
                    height: 250px
                    margin: 20px 0
                @media screen and (max-width: 576px)
                    width: 50%
                    height: 250px
                    margin: 10px 0

.sweet-alert
    overflow: scroll
    max-height: 80vh
    margin-top: 10px
    h3
        font-size: 1em
        font-weight: bold
    .sa-icon
        &.sa-custom
            width: 160px !important
            height: 160px !important
            border-radius: 50%


.subtext
    font-size: 0.95em !important


.judgeWords
    width: 100%
    padding: 20px
    li
        margin: 30px 0 !important
        padding: 30px 0 !important
        width: 100% !important
        height: auto !important
        border-bottom: 1px solid black
        display: flex
        justify-content: center
        align-items: flex-start !important
        flex-direction: row !important
        &:nth-child(2)
            flex-direction: row-reverse !important
        &:last-child
            border-bottom: 1px solid transparent
        @media screen and (max-width: 768px)
            flex-direction: column !important
            align-items: center !important
            height: auto !important
            &:nth-child(2)
                flex-direction: column !important
            .judgeWord
                margin-top: 20px
        .judgeIntro
            margin: 0 30px
            max-width: 300px
            height: auto
            display: flex
            flex-direction: column
            align-items: center
            .judgeWrapper
                width: 200px
                height: 200px
                border-radius: 50%
                overflow: hidden
                img
                    width: 100%
                    height: auto
            h3
                font-size: 24px !important
        .judgeWord
            flex: 1
