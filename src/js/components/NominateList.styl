.NominateContainer
    display: flex
    flex-direction: column
    align-items: center
    .filterBox
        margin: 15px 0
        display: flex
        justify-content: space-around
        align-items: center
        div
            cursor: pointer
            font-size: 1.25em
            border: 2px solid #50514F
            padding: 5px 20px
            margin: 0 5px
            border-radius: 5px
            transition: all 0.25s ease
            &:hover
                transition: all 0.35s ease
                background: #50514F
                color: white
    .peopleBox
        max-width: 1280px
        width: 100%
        ul
            width: 100%
            height: auto
            display: flex
            justify-content: flex-start
            align-items: flex-start
            flex-wrap: wrap
            li
                width: 25vw
                height: 25vw
                margin: 10px 0
                display: flex
                flex-direction: column
                align-items: center
                .listContain
                    width: 70%
                    height: 100%
                    box-shadow: 1px 1px 5px #50514F
                    display: flex
                    flex-direction: column
                    align-items: center
                    position: relative
                    background: #4568DC; /* fallback for old browsers */
                    background: -webkit-linear-gradient(220deg, #4568DC , #B06AB3); /* Chrome 10-25, Safari 5.1-6 */
                    background: linear-gradient(220deg, #4568DC , #B06AB3); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
                    .textWrapper
                        position: absolute
                        top: 0
                        left: 0
                        width: 100%
                        height: 100%
                        display: flex
                        flex-direction: column-reverse
                        align-items: center
                        background: #4568DC; /* fallback for old browsers */
                        background: -webkit-linear-gradient(220deg, rgba(#4568DC, 0.35) , rgba(#B06AB3, 0.35)); /* Chrome 10-25, Safari 5.1-6 */
                        background: linear-gradient(220deg, rgba(#4568DC, 0.35) , rgba(#B06AB3, 0.35));
                        z-index: 2
                        div
                            color: white
                            font-size: 1.25em
                    .imgWrapper
                        z-index: 1
                        position: absolute
                        top 0
                        left: 0
                        width: 100%
                        height: 100%
                        display: flex
                        justify-content: center
                        align-items: center
                        overflow: hidden
                        img
                            width: auto
                            height: 100%
