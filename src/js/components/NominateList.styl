.NominateContainer
    display: flex
    flex-direction: column
    align-items: center
    .filterBox
        margin: 15px 0
        display: flex
        justify-content: space-around
        align-items: center
        div
            cursor: pointer
            font-size: 1.25em
            border: 2px solid #50514F
            padding: 5px 20px
            margin: 0 5px
            border-radius: 5px
            transition: all 0.25s ease
            &:hover
                transition: all 0.35s ease
                background: #50514F
                color: white
    .peopleBox
        max-width: 1280px
        width: 100%
        ul
            width: 100%
            height: auto
            display: flex
            justify-content: flex-start
            align-items: flex-start
            flex-wrap: wrap
            li
                display: flex
                flex-direction: column
                align-items: center
                width: 25%
                margin: 10px 0
                .imgWrapper
                    width: 100px
                    height: 100px
                    border: 2px solid #50514F
                    border-radius: 50%
                    overflow: hidden
                    img
                        width: 100%
                        height: auto
