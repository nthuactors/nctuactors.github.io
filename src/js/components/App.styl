$nthu_color = #73A16F
*
    margin: 0
    padding: 0
    font: inherit
    vertical-align: baseline
    box-sizing: border-box
    font-family: PingFangTC-Regular, xingothic-tc, sans-serif, Microsoft JhengHei
    font-weight: 400
html
    font-size: 15px
    width: 100%
    height: 100%
    padding: 0
    margin: 0
    line-height: 1.5
body
    width: 100%
    height: 100%
h1
  font-size: 30px;

h2
  font-size: 30px;

h3
  font-size: 17px;

span
  font-size: 13px;

p
  font-size: 16px;

@media screen and (max-width: 992px)
  h1
    font-size: 24px;
  h2
    font-size: 24px;

@media screen and (max-width: 768px)
  h1
    font-size: 17px;
  h2
    font-size: 17px;
  p
    font-size: 14px;
    text-align: left;
a
    display: inline-block
    text-decoration: none
.section
    width: 100%
    display: block
    height: calc(100vh - 50px)
