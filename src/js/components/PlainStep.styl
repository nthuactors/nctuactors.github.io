.StepIntro
    position: absolute
    top: 15%
    left: 0%
    width: 100%
    height: auto
    display: flex
    flex-direction: column
    align-items: center
    padding: 20px
    @media screen and (max-width: 768px)
        position: relative
    .StepText
        display: none
    .StepList
        width: 100%
        ul
            display: flex
            justify-content: space-around
            align-items: center
            width: 100%
            li
                background: #00aaff
                width: calc(25% - 10px)
                height: 25vw
                display: flex
                flex-direction: column
                align-items: center
                justify-content: center
                .IconImg
                    width: 80%
                    height: 80%
                    img
                        width: 100%
                        height: 100%
                .IconBrief
                    margin-top: 10px
            @media screen and (max-width: 768px)
                flex-wrap: wrap
                li
                    height: 50vw
                    width: calc(50% - 10px)
                    margin: 5px 0
