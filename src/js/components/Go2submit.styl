.submitIntro
    height: 100%
    display: flex
    // background-image: url("https://nthuactors.github.io/src/js/components/img/bg/flower2.jpg")
    background-repeat: no-repeat
    background-position: center center
    background-size: cover
    position: relative
    flex-direction: column
    justify-content: center
    align-items: center
    &:after
        top: 0
        left: 0
        content: ''
        background: rgba(#FFF,0.35)
        background: #4CA1AF; /* fallback for old browsers */
        background-position: 0% 0%
        background: -webkit-linear-gradient(to left, rgba(#DE6262, 0.25) , rgba(#C4E0E5, 0.5)); /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to left, rgba(#DE6262,0.25) , rgba(#C4E0E5, 0.5)); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        width: 100%
        height: 100%
        z-index: 1
        position: absolute
    .submittext
        display: flex
        flex-direction: column
        align-items: center
        font-style: italic
        z-index: 10
        margin: 15px 0
        line-height: 1.5
        max-width: 75%
        p
            color: #202020
            // text-shadow: 1px 1px 5px darken(#AAA, 25%)
            text-align: center
            font-size: 1.5em
            font-weight: 400
            &.bg_text
                margin-bottom: 20px
            &.sm_text
                font-size: 1.25em
    .submitBtn
        z-index: 10
        border-radius: 1px
        background: #7361af //7CEECE, 7361af
        border: 3px solid darken(#7361af, 25%)
        color: white
        padding: 10px 50px
        cursor: pointer
        // box-shadow: 1px 1px 5px darken(#50514F, 25%)
        a
            letter-spacing: 3px
            font-size: 1.25em
            color: white
    @media screen and (max-width: 1024px)
        padding: 20px 20px
