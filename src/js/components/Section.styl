$nthu_color = #7361AF
.section
    width: 100%
    min-height: calc(100vh - 50px)
    display: flex
    flex-direction: column
    align-items: center
    padding: 20px 0
    &.lighten
        background: lighten($nthu_color, 50%)
    &.darken
        color white
        background: darken($nthu_color, 50%)
    .sectionTitle
        position: relative
        display: inline-block
        padding: 30px 0 15px
        h1
            display: block
            font-size: 24px
        &:before
            content: ''
            position: absolute
            width: 50px
            height: 3px
            left 50%
            bottom: 0px
            background: white
            transform: translateX(-25px)
    .sectionContent
        min-height: 500px
        height: auto
        width: 100%
        position: relative
.sm_section
    min-height: 250px
    height: 30vh
    width: 100%
    &.lighten
        background: #EFEFEF
    &.darken
        color white
        background: #101010
