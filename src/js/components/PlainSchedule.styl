$tiffeny = darken(#7CEECE, 10%)
.ScheduleIntro
    position: absolute
    top: 15%
    left: 0%
    width: 100%
    height: auto
    display: flex
    flex-direction: column
    align-items: center
    padding: 20px
    @media screen and (max-width: 768px)
        position: relative
    .ScheduleText
        display: none
    .ScheduleList
        width: 100%
        ul
            display: flex
            justify-content: space-around
            align-items: center
            width: 100%
            padding-left: 5%
            li
                display: flex
                align-items: center
                justify-content: space-between
                // background: #92CCE1
                width: calc(33% - 10px)
                .timeInfo
                    // background: #FFF//$tiffeny
                    border: 3px solid #323232
                    width: calc(85% - 10px)
                    min-height: 25vw
                    display: flex
                    flex-direction: column
                    align-items: center
                    justify-content: center
                    padding: 20px 0
                    .IconImg
                        width: 30%
                        height: auto
                        img
                            width: 100%
                            height: 100%
                        .svgItem
                            stroke: $tiffeny
                            fill: $tiffeny
                            g
                                g
                                    g
                                        path,
                                        circle
                                            stroke: $tiffeny !important
                                            fill: $tiffeny !important
                    .IconTime
                        text-align: center
                        margin-top: 10px
                        h1
                            font-weight: bolder
                            margin: 0
                            line-height: 1.2
                            font-size: 1.5em
                    .IconBrief
                        margin-top: 10px
                .pointArrow
                    width: calc(15% - 10px)
                    display: flex
                    justify-content: center
                    align-items: center
                    width: 30px
                    height: 30px
                    img
                        width: 100%
                        height: auto
                &:nth-child(3)
                    .pointArrow
                        display: none
            @media screen and (max-width: 768px)
                flex-wrap: wrap
                li
                    min-height: 30vw
                    width: calc(90% - 10px)
                    margin: 5px 0
