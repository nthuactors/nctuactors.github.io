.JudgeIntro
    padding: 0 30px
    margin-bottom: 30px
    margin-top: 50px
    max-width: 1024px
    width: 100%
    .slide
        min-height: 200px
        padding: 10px 10px
        .slideInner
            // background: #323232
            background: #FFF
            .slideContent
                display: flex
                flex-direction: column
                align-items: center
                padding: 5px 0
                h1
                    color: #50514F
                    font-size: 1.5em
                h2
                    color: #50514F
                    font-size: 1em
            .slideImg
                width: 100%
                img
                    width: 100%
                    height: auto
        @media screen and (max-width: 768px)
            margin: 0

.slick-dots
    li
        button
            &:before
                opacity: 0.5
                color: white
